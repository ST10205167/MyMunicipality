<UserControl x:Class="MyMunicipality.NavigationBar"
             xmlns:local="clr-namespace:MyMunicipality;assembly=MyMunicipality"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Height="50" HorizontalAlignment="Stretch">

    <StackPanel Orientation="Horizontal" Background="#FF3A3A3A">
        <Button Content="Home" Width="100" Margin="5" Background="#FF28965A" Foreground="White"
                Click="HomeButton_Click"/>
        <Button Content="Report Issues" Width="100" Margin="5" Background="#FF333333" Foreground="White"
                Click="ReportButton_Click"/>
        <Button Content="Events and Announcements" Width="100" Margin="5" Background="#FF333333" Foreground="White"
                Click="EventsButton_Click"/>
        <Button Content="Service Request" Width="100" Margin="5" Background="#FF333333" Foreground="White"
                Click="ServicesButton_Click"/>
        <Button Content="Exit" Width="100" Margin="5" Background="#FFF34040" Foreground="White"
                Click="ExitButton_Click"/>
    </StackPanel>
</UserControl>
