<UserControl x:Class="MyMunicipality.EventCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10" Margin="10">
        <StackPanel>
            <TextBlock x:Name="EventNameTextBlock" FontSize="18" FontWeight="Bold" Foreground="#FF28965A"/>
            <TextBlock x:Name="EventCategoryTextBlock" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
            <TextBlock x:Name="EventDateTextBlock" FontSize="14" Foreground="Gray"/>
            <TextBlock x:Name="EventLocationTextBlock" FontSize="14" Foreground="Gray"/>
            <TextBlock x:Name="EventDescriptionTextBlock" FontSize="12" Foreground="DarkGray" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="EditButton" Content="Edit" Background="#FF28965A" Foreground="White" Width="80" Margin="5"/>
                <Button x:Name="DeleteButton" Content="Delete" Background="Red" Foreground="White" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
