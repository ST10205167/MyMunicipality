<UserControl x:Class="MyMunicipality.UserControls.ServiceRequestCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMunicipality.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="Auto" d:DesignWidth="Auto">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10" Margin="10">
        <StackPanel>
            <TextBlock x:Name="RequestIdTextBlock" FontSize="18" FontWeight="Bold" Foreground="#FF28965A"/>
            <TextBlock x:Name="RequestCategoryTextBlock" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
            <TextBlock x:Name="RequestDateTextBlock" FontSize="14" Foreground="Gray"/>
            <TextBlock x:Name="RequestLocationTextBlock" FontSize="14" Foreground="Gray"/>
            <TextBlock x:Name="RequestDescriptionTextBlock" FontSize="12" Foreground="DarkGray" Margin="0,10,0,0"/>
            <Image x:Name="RequestAttachmentImage" Height="100" Stretch="Uniform" Visibility="Collapsed" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
